@model DeveloperNoteRecord.ViewModel.NoteDetailViewModel
@{
    ViewData["Title"] = "Create Note";
}

<h2>Index</h2>

<form asp-action="Create" asp-controller="Note" method="post">
    <select class="custom-select" asp-for="@Model.DeveloperId" >
        @foreach(var item in @Model.Developers)
        {

            <option value="@item.Id">@item.Name</option> 
        }
    </select>

    <div class="form-group">
        <label asp-for="@Model.Title">Note Title</label>
        <input type="text" class="form-control" asp-for="@Model.Title">
    </div>

    <div class="form-group">
        <label asp-for="@Model.Content">Note Content</label>
        <textarea class="form-control" asp-for="@Model.Content"> </textarea>
    </div>
    <div class="form-group">
        <label asp-for="@Model.CreatedDate">Created Date</label>
        <input type="text" class="form-control" asp-for="@Model.CreatedDate">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>